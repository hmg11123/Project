<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">

	<select id="boardAllList" resultType="boardVO">
	
	SELECT 	B_UID,
			B_TITLE,
			B_AUTHOR
      FROM	BOARD	
	</select>
	
	
	<insert id="boardWrite" parameterType="boardVO">
		INSERT INTO BOARD
		(
			B_TITLE,
			B_AUTHOR,
			B_CONTENT
		)
		VALUES
		(
			#{b_title},
			#{b_author},
			#{b_content}
		)
		
	</insert>
	
	
	
	
	
	<delete id="boardDelete" parameterType="boardVO">
	
	DELETE	
	  FROM	`B_BOARD`
	 WHERE	`B_UID` = #{B_UID}
	
	</delete>

</mapper>