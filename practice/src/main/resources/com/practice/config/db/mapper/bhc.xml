<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bhc">


	<select id="bhcList" resultType="BhcVO">

		SELECT 	MENU_UID,
			  	NAME,
			   	PRICE,
			   	SPICY,
			   	REVIEW
		  FROM 	MENU
	</select>

	<select id="bhcList2" resultType="BhcVO" parameterType="BhcVO">
		SELECT	`MENU_UID`
				,`NAME`
				,`PRICE`
				,`SPICY`
				,`REVIEW`
		  FROM  MENU
		 WHERE  `MENU_UID` = #{menu_uid}
	
	
	</select>
	
	


	<insert id="bhcSubmit" parameterType="BhcVO">
		INSERT INTO MENU
		(
		NAME,
		PRICE,
		SPICY,
		REVIEW,
		BRAND_UID
		)
		VALUES
		(
		#{name},
		#{price},
		#{spicy},
		#{review},
		#{brand_uid}
		)

	</insert>


	<update id="bhcupdate" parameterType="BhcVO">

		 UPDATE `MENU`
			SET `NAME` = #{name}
				,`PRICE` = #{PRICE}
				,`SPICY` = #{SPICY}
				,`REVIEW` = #{REVIEW}
		  WHERE `MEUN_UID` = #{MEUN_UID}

	</update>
	
	<delete id="bhcdelete" parameterType="BhcVO">
	
	DELETE	
	  FROM	`MENU`
	 WHERE	`MEUN_UID` = #{MEUN_uid}
	</delete>
	  
	
	
	

</mapper>
	